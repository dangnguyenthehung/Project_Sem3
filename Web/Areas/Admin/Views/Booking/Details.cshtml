@using Web.SingleTon
@model Model.Models.Orders
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header" data-background-color="purple">
                    <h4 class="title">Booking Details</h4>
                    <p class="category">Order ID: @Model.IdOrder</p>
                </div>
                <div class="card-content">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group label-floating">
                                <label class="control-label">Branch</label>
                                @*<input type="text" class="form-control" disabled>*@
                                @BranchSingleTon.GetAddress(Model.IdBranch)
                            </div>
                        </div>
                        <div class="col-md-6">
                            <a href="@Url.Action("Update", "Booking", new {id = Model.IdOrder})">
                                <div class="btn btn-warning pull-right">
                                    Update
                                </div>
                            </a>
                            <a href="@Url.Action("Update", "Booking", new {id = Model.IdOrder})">
                                <div class="btn btn-success pull-right">
                                    Verify
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group label-floating">
                                <label class="control-label">Begin Time</label>
                                @Html.TextBoxFor(b => b.BeginTime, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group label-floating">
                                <label class="control-label">End Time</label>
                                @Html.TextBoxFor(b => b.EndTime, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group label-floating">
                                <label class="control-label">Number Of Customer</label>
                                @Html.TextBoxFor(b => b.NumberOfCustomer, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group label-floating">
                                <label class="control-label">Number Of Table</label>
                                @Html.TextBoxFor(b => b.NumberOfTable, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group label-floating">
                                <label class="control-label">Deposit</label>
                                @Html.TextBoxFor(b => b.Deposit, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Description</label>
                                <div class="form-group label-floating">
                                    @Html.TextAreaFor(b => b.Description, new { @class = "form-control", @rows = 5 })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-profile">
                <div class="card-avatar">
                    <a href="#pablo">
                        <img class="img" src="~/Content/admin/img/faces/marc.jpg" />
                    </a>
                </div>
                <div class="content">
                    <h6 class="category text-gray">CEO / Co-Founder</h6>
                    <h4 class="card-title">Alec Thompson</h4>
                    <p class="card-content">
                        Don't be scared of the truth because we need to restart the human foundation in truth And I love you like Kanye loves Kanye I love Rick Owens’ bed design but the back is...
                    </p>
                    <a href="#pablo" class="btn btn-primary btn-round">Follow</a>
                </div>
            </div>
        </div>
    </div>
</div>

