@using Web.Security
@using Web.SingleTon
@model List<Model.Models.TableType>
@{
    ViewBag.Title = "Type";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="card">
            <div class="card-header" data-background-color="purple">
                <h4 class="title">Table Type</h4>
            </div>
            <div class="card-content table-responsive">
                <table class="table table-hover">
                    <thead class="text-primary">
                    <tr>
                        <th>Description</th>
                        <th>Capacity</th>
                        <th>Deposit Fee</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Description</td>
                                <td>@item.TableCapacity</td>
                                <td class="text-primary">$@item.DepositFee</td>

                                <td>
                                    @if (SessionPersister.MenuLayoutVisibility.TableType.UpdateType)
                                    {
                                        <a href="@Url.Action("EditType", "Table", new {id = item.Id_Table_Type})">Edit</a>
                                    }
                                </td>
                            </tr>
                        }
                    }

                    </tbody>
                </table>
            </div>
        </div>
        
        <div>
            @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>
</div>
