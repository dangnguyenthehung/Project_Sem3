                            @Html.DropDownList("EndTime", ListGio, new { @class = "form-control", @id = "EndTime", @style = "padding-left: 15px; padding-top: 8px" })                       
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <h6 style="float:left">Description</h6>
