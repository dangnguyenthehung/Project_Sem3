@model Model.Models.Customer
@{
    ViewBag.Title = "Sign Up";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12" style="margin-top: 10px">
            <div class="card card-signup wow fadeInUp" data-background-color="orange">
                    <div class="header text-center">
                        <h4 class="title title-up">Sign Up</h4>
                    </div>
                    <fieldset>
                        @using (Html.BeginForm("SignUp", "Login", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            
                            <div class="w3-row-padding w3-padding-16 w3-center">
                                <div class="col-xs-12">
                                    @Html.ValidationSummary(false, null, new {@class = "text-danger booking-error"})    
                                </div>
                            </div>

                            <div class="card-body" style="margin-top: 0px">
                                <div class="form-group form-group-no-border">
                                    <div class="col-xs-12">
                                        @Html.LabelFor(a => a.CMND)
                                        @*@Html.ValidationMessageFor(model => model.CMND, "", new { @class = "text-danger" })*@
                                        @Html.TextBoxFor(a => a.CMND, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group form-group-no-border">
                                    <div class="col-xs-12">
                                        @Html.LabelFor(a => a.FullName)
                                        @*@Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })*@
                                        @Html.TextBoxFor(a => a.FullName, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group form-group-no-border">
                                    <div class="col-xs-12">
                                        @Html.LabelFor(a => a.Phone)
                                        @*@Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })*@
                                        @Html.TextBoxFor(a => a.Phone, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group form-group-no-border">
                                    <div class="col-xs-12">
                                        @Html.LabelFor(a => a.Address)
                                        @*@Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })*@
                                        @Html.TextBoxFor(a => a.Address, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group form-group-no-border">
                                    <div class="col-xs-12">
                                        @Html.LabelFor(a => a.Password)
                                        @*@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })*@
                                        @Html.PasswordFor(a => a.Password, new { @class = "form-control", @id="signup_pass" })
                                    </div>
                                </div>
                                <div class="footer text-center">
                                    <button type="submit" class="btn btn-neutral btn-round btn-lg" style="margin-top: 20px">
                                        Sign Up
                                    </button>
                                </div>

                            </div>
                        }
                    </fieldset>
            </div>
        </div>
        
    </div>
 
</div>


